@using static Sufficit.Blazor.Telephony.Constants
@if (!AudioPlayExists)
{    
    @if (AudioPlay)
    {
        <script>window.onload => new AudioContext();</script>
        <audio id="@RINGINGELEMENTID" autoplay loop><source src="@AudioFile"></audio>
    } 
    else
    {
        <audio id="@RINGINGELEMENTID" muted><source src="@AudioFile"></audio>
    }
}
@if (Active.Any())
{    
    <MudStack Row="true">
        @foreach (var session in Active) {
            <MudIconButton OnClick="() => OnSessionSelected(session)" Class="mud-elevation-5" Style="padding: 0">
                <ContactAvatar Size="Size.Medium" ReferenceId="GetUserId(session.RemoteUser)"></ContactAvatar>
            </MudIconButton>
        }
    </MudStack>
}