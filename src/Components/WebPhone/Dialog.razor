<MudStack Style="width:100%; height:100%; padding:30px">
    @if (CallSession != null)
    {
        <MudStack>
            <MudText>@PhoneNumber is Calling...</MudText>
        </MudStack>
        <MudStack Style="width:fit-content; flex:1; justify-content:center; margin:auto">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </MudStack>
        <MudIconButton OnClick=@((_) => CallSession.Terminate())
            Color="Color.Primary"
            Variant="Variant.Filled"
            Icon="@Icons.Material.Filled.Phone"
            Style="width:30px; height:30px; border-radius:100%; flex:none; margin:auto">
        </MudIconButton>
    }
</MudStack>

@code {
    [Parameter] 
    public string? PhoneNumber { get; set; }

    [EditorRequired]
    [Parameter] 
    public JsSIPSessionMonitor? CallSession { get; set; }

    [Parameter] 
    public EventCallback<string> SetIsCalling { get; set; }
}