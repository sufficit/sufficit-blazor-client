@using System.Threading;
<MudMenu Color="@this.Color" Icon="@Icons.Material.Filled.Api" FullWidth="false" data-animation="@this.Animation">
    @if (EPService.IsTrying)
    {
        <MudMenuItem Icon="@Icons.Material.Filled.SettingsPower" OnClick="() => EPService.StopAsync(System.Threading.CancellationToken.None)">
            Estabilizando
        </MudMenuItem>
    }
    else if (EPService.IsConnected)
    {
        <MudMenuItem Icon="@Icons.Material.Filled.SettingsPower" OnClick="() => EPService.StopAsync(System.Threading.CancellationToken.None)">
            Parar
        </MudMenuItem>
    }
    else
    {
        <MudMenuItem Icon="@Icons.Material.Filled.SettingsPower" OnClick="OnStartClicked">
            Inicializar
        </MudMenuItem>
    }

    <MudMenuItem Icon="@Pages.Telephony.Monitor.Configuration.Icon" Href="@Pages.Telephony.Monitor.Configuration.RouteParameter">Configurações</MudMenuItem>    
</MudMenu>