<MudCard Elevation="3" Class="pa-4 my-1">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.Event"></MudIcon>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Contato de destino para disparo de alertas do evento solicitado</MudText>
            <MudText Typo="Typo.body2">Insira um E-Mail ou número de Telefone com DDD</MudText>
            <MudText Typo="Typo.caption">*não se preocupe com a formatação, para facilitar pode copiar e colar.</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudDivider DividerType="DividerType.Inset"></MudDivider>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" sm="12" md="7">
                <MudTextField 
                    T="string"
                    @bind-Value="Destination"
                    Adornment="Adornment.Start"
                    AdornmentIcon="@Icons.Material.Filled.PermContactCalendar"
                    Immediate="true"
                    Label="Destino"
                    Variant="Variant.Outlined"
                    FullWidth="true"
                    AutoFocus="true"
                    TextChanged="OnContactTextChanged" />
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudSelect Dense="true" T="Sufficit.Exchange.TChannel" Label="Tipo de Canal" Variant="Variant.Text" @bind-Value=@Channel>
                    <MudSelectItem Value="@(Sufficit.Exchange.TChannel.WHATSAPP)"><MudText Align="Align.Center">WhatsApp</MudText></MudSelectItem>
                    <MudSelectItem Value="@(Sufficit.Exchange.TChannel.WEBHOOK)"><MudText Align="Align.Center">WebHook</MudText></MudSelectItem>
                    <MudSelectItem Value="@(Sufficit.Exchange.TChannel.SMS)"><MudText Align="Align.Center">SMS</MudText></MudSelectItem>
                    <MudSelectItem Value="@(Sufficit.Exchange.TChannel.TELEGRAM)"><MudText Align="Align.Center">Telegram</MudText></MudSelectItem>
                    <MudSelectItem Value="@(Sufficit.Exchange.TChannel.EMAIL)"><MudText Align="Align.Center">E-Mail</MudText></MudSelectItem>
                    <MudSelectItem Value="@(Sufficit.Exchange.TChannel.UNKNOWN)"><MudText Align="Align.Center"> ----------- </MudText></MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6" md="2">
                <MudButtonEnchanted Variant="Variant.Filled" FullWidth="true"
                    StartIcon="@Icons.Material.Filled.Check"
                    Color="@Color.Secondary"
                    OnClick="OnValidateClick"
                    >Validar</MudButtonEnchanted>                
            </MudItem>
        </MudGrid>       
        @if (ContactValidation != null)
        {
            <MudDivider Class="mt-5 pt-5"></MudDivider>
            <MudAlert Severity="@ContactValidationSeverity">
                <MudText>@ContactValidation.Channel</MudText>
                <MudDivider Class="mt-1 pt-1"></MudDivider>
                @if (ContactValidation.Success)
                {
                    <MudText Typo="Typo.body2">@ContactValidation.Valid</MudText>
                } 
                else
                {
                    <MudText Typo="Typo.body2">@ContactValidation.Message</MudText>
                }
            </MudAlert>
        }

    </MudCardContent>
</MudCard>