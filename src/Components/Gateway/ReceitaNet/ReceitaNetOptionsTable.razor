@using Sufficit.Gateway.ReceitaNet;
<MudTable @ref="Table"
          T="RNOptions"
          LoadingProgressColor="Color.Info"
          ServerData="TableServerData"
          Breakpoint="Breakpoint.Sm"
          Hover="true"
          Class="my-3">    
    <LoadingContent>
        <MudSkeleton Class="mx-3 mt-n3" Animation="Animation.Wave" Height="70px" />
        <MudSkeleton Class="mx-3 mt-n3" Animation="Animation.Wave" Height="70px" />
    </LoadingContent>
    <HeaderContent>
        <MudTh Style="text-align: left; width: 70px"></MudTh>
        <MudTh Style="width: 200px">Titulo</MudTh>
    </HeaderContent>
    <NoRecordsContent>        
        <MudText>Nenhum resultado encontrado ! ...</MudText>              
    </NoRecordsContent>
    <RowTemplate>
        <MudTd DataLabel="Ações">
            <MudTooltip Text="Editar opções">
                <MudLink Href="@Pages.Gateway.ReceitaNet.GetLink(context.Id)" Underline="Underline.None" Class="mx-1">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"></MudIconButton>
                </MudLink>
            </MudTooltip>
        </MudTd>
        <MudTd DataLabel="Title">@context.Title</MudTd>
    </RowTemplate>
</MudTable>