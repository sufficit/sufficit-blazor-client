@using MudBlazor.Components
@using MudBlazor
@using Sufficit.Identity

<AuthorizeView>
    <Authorized>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudDrawer @bind-Open="SideBarExtended" Fixed="false" Elevation="0" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" Class="bg-gray-200">
                <SideBarDrawerContainer SideBarExtended="@SideBarExtended" ToggleDrawer="ToggleDrawer"></SideBarDrawerContainer>
            </MudDrawer>
        </MudHidden>

        <MudHidden Breakpoint="Breakpoint.Xs" Invert>
            <MudDrawer @bind-Open="SideBarExtended" Fixed="false" Elevation="0" Variant="@DrawerVariant.Responsive" Class="bg-gray-200">
                <SideBarDrawerContainer SideBarExtended="@SideBarExtended" ToggleDrawer="ToggleDrawer"></SideBarDrawerContainer>
            </MudDrawer>
        </MudHidden>
    </Authorized>
</AuthorizeView>    

@code{
    void ToggleDrawer()
    {
        SideBarExtended = !SideBarExtended;
    }

    [Parameter]
    public bool SideBarExtended { get; set; } = default!;
}