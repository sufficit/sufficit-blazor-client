@using Sufficit.Blazor.Client.Components.Contacts
@if (View.ContextId != Guid.Empty)
{
    <MudCard Elevation="0" Style="background: transparent" data-animation="true">
        <MudCardHeader Class="justify-center py-0" Style="position: relative; z-index: 1">
            <ContactAvatar ReferenceId="View.ContextId" Size="Size.Large"></ContactAvatar>
        </MudCardHeader>
        <MudCardActions>
            <MudButtonGroup Class="d-flex mx-auto justify-center" Variant="Variant.Text" Size="Size.Small" DisableElevation="true">
                <MudIconButton Icon="@Icons.Material.Filled.Refresh" OnClick="ChooseClicked"></MudIconButton>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Href="@ProfileLink" Target="_blank"></MudIconButton>
            </MudButtonGroup>
        </MudCardActions>
        <MudCardContent>            
            @if (true || !Collapsed)
            {
                <MudText Typo="Typo.h6" Class="text-truncate">@ContextTitle</MudText>
                @if (!string.IsNullOrWhiteSpace(ContextDocument))
                {
                    <MudText Typo="Typo.body2" Class="text-truncate">@ContextDocument</MudText>
                }                
            }
        </MudCardContent>        
    </MudCard>
    <MudDivider Class="my-2" DividerType="DividerType.Middle" />
}