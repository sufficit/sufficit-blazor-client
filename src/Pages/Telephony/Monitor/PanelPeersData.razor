@using Sufficit.Telephony.EventsPanel
@inherits BasePageComponent

COUNTER ::::: @TotalItems
FILTER ::::: @FilterText
<MudTable @ref="Table"
    T="Sufficit.Telephony.EventsPanel.PeerInfoMonitor"
    ServerData="GetData"
    RowsPerPage="PageSize"
    RowsPerPageChanged="OnRowsPerPageChanged"
    Class="mt-10"
    Hover="true" 
    FixedHeader="true"
    Virtualize="true"    
    TotalItems="TotalItems"
    SortLabel="Ordenar Por">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Monitoramento de EndPoints</MudText>
        <MudSpacer />
        <MudTextField 
            T="string"
            Class="mt-0"
            Placeholder="Search" 
            Adornment="Adornment.Start" 
            AdornmentIcon="@Icons.Material.Filled.Search" 
            IconSize="Size.Medium"
            Immediate="true"
            @bind-Value="FilterText">
        </MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Permanent)"></MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Content.Protocol)">Tecnologia</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Content.Name)">Identificação</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Content.Status)">Estado</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Content.Address)">Endereço</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Content.Cause)">Motivo</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="PeerInfoMonitor" SortBy="(x => x.Content.Time)">Tempo</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <PeerRowTemplate Monitor="@context"></PeerRowTemplate>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{10, 20, 50, 100}" />
    </PagerContent>
</MudTable>