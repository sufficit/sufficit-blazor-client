@using Sufficit.Telephony.EventsPanel
@inherits BasePageComponent

COUNTER ::::: @Counter
<MudTable @ref="Table"
          T="Sufficit.Telephony.EventsPanel.PeerInfoMonitor"
        ServerData="GetData"
        Class="mt-10"
        Hover="true" 
        SortLabel="Sort By"
          Filter="new Func<Sufficit.Telephony.EventsPanel.PeerInfoMonitor, bool>(OnSearch)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Periodic Elements</MudText>
        <MudSpacer />
        <MudTextField 
            T="string"
            Class="mt-0"
            Placeholder="Search" 
            Adornment="Adornment.Start" 
            AdornmentIcon="@Icons.Material.Filled.Search" 
            IconSize="Size.Medium"
            @bind-Value="FilterText">
        </MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Sufficit.Telephony.EventsPanel.PeerInfo, object>(x => x.Protocol)">Tecnologia</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Sufficit.Telephony.EventsPanel.PeerInfo, object>(x => x.Name)">Identificação</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Sufficit.Telephony.EventsPanel.PeerInfo, object>(x => x.Status)">Estado</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Sufficit.Telephony.EventsPanel.PeerInfo, object>(x => x.Address != null ? x.Address : new Char())">Endereço</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Sufficit.Telephony.EventsPanel.PeerInfo, object>(x => x.Cause != null ? x.Cause : new Char())">Motivo</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Sufficit.Telephony.EventsPanel.PeerInfo, object>(x => x.Time != null ? x.Time : 0)">Tempo</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <PeerRowTemplate Monitor="@context"></PeerRowTemplate>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{10, 20, 50, 100}" />
    </PagerContent>
</MudTable>