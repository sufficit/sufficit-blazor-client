@attribute [Route(RouteParameter)]
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Options
@using Sufficit.Client
@using Sufficit.Telephony
@using Sufficit.Blazor.Client.Models
@inherits MonitorTelephonyBasePageComponent 

<VisibleCards Panel="@PanelCurrent"></VisibleCards>

@if (ErrorConfig != null)
{
    <div class="alert alert-danger mb-0 m-3 text-white p-2">
        <h6 class="alert-heading p-0 m-0">Erro interno !</h6>

        <span class="alert-text text-xs">@ErrorConfig.GetType(): <small>@ErrorConfig.Message</small> : @ErrorConfig.InnerException?.Message</span>
    </div>
} else {
    @if (PanelCurrent != null)
    {
        <EventsPanel Panel="@PanelCurrent"></EventsPanel>
    } else
    {
        <MudAlert Severity="MudBlazor.Severity.Error">Events Panel not found</MudAlert>
    }
}