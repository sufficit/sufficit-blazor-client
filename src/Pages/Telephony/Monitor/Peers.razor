@attribute [Route(RouteParameter)]
@attribute [Authorize]
@inherits MonitorTelephonyBasePageComponent 
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Options
@using Sufficit.Blazor.Client.Pages.Telephony
@using Sufficit.Client
@using Sufficit.Telephony
@using Sufficit.Blazor.Client.Models

@if (ErrorConfig != null)
{
    <div class="alert alert-danger mb-0 m-3">
        <MudText Typo="Typo.h4" class="alert-heading">Erro interno !</MudText>
        <MudText Typo="Typo.body2">@ErrorConfig.GetType(): <small>@ErrorConfig.Message</small></MudText>
    </div>
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <MudText Typo="Typo.h5">Monitoramento do estado de pares</MudText>
                <MudText Typo="Typo.body2">
                    Exibe em tempo real o estado e as informações básicas do pares | extensões | ramais do PABX.
                </MudText>
            </div>
            <PanelPeersData></PanelPeersData>
        </div>
    </div>
</div>