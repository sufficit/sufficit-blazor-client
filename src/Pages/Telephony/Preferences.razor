@implements IPage
@attribute [Route(RouteParameter)]
@inherits TelephonyBasePageComponent

@if (ContextView.ContextId.GetValueOrDefault() == Guid.Empty)
{
    <MudPaper Elevation="0" Style="background-color: transparent;" Class="pa-16 ma-2 d-flex align-center justify-center mud-width-full">
        <ClientMissing></ClientMissing>
    </MudPaper>
}
else
{
    <MudGrid Spacing="0">
        <MudItem xs="12" md="12" lg="3">
            <MudCard Class="ma-2" Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Código de área</MudText>
                        <MudText Typo="Typo.body2">Prefixo de discagem regional</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    <MudNumericField Value="@AreaCodePreference"
                                     ValueChanged="OnAreaCodeChanged"
                                     T="uint?"
                                     MaxLength="2"
                                     HideSpinButtons="true"
                                     Min="11" Max="99"
                                     AdornmentIcon="@Icons.Material.Filled.Map"
                                     Adornment="Adornment.Start"
                                     HelperText="*Somente números (xx)"></MudNumericField>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="12" lg="4">
            <MudCard Class="ma-2" Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">BINA</MudText>
                        <MudText Typo="Typo.body2">Encaminhamento de identificação externa</MudText>
                        <MudText Typo="Typo.body2">Tipo de bina para chamadas de saída</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    <MudSelect 
                        T="string" 
                        AnchorOrigin="Origin.BottomCenter" 
                        Value="IDForwardProperty?.Value" 
                        ValueChanged="OnIdForwardChanged">
                            <MudSelectItem T="string" Value="null">Não definido</MudSelectItem>
                            <MudSelectItem Value="@("true")">Verdadeiro</MudSelectItem>
                            <MudSelectItem Value="@("false")">Falso</MudSelectItem>
                            <MudSelectItem Value="@("forcedtrue")">Forçadamente Verdadeiro</MudSelectItem>
                            <MudSelectItem Value="@("forcedfalse")">Forçadamente Falso</MudSelectItem>
                    </MudSelect>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

}